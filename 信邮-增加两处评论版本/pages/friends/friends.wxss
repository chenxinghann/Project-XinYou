/* pages/friends/friends.wxss */
.container{
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}
.search {
  width: 85%;
  padding-left: 10rpx;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 100rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;

}

.sousuo {
  padding-left: 38%;
  width: 15%;
  line-height: 150%;
  text-align: center;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  margin-left: 38%;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}

.addF{
  width: 50rpx;
  height: 50rpx;
  margin-right: 5%;
}

.list-text {
  font-size: 16px;
  margin-left: 5px;
}


.list-view-groups {
  display: flex;
  height: 40px;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid lightgray;
  margin-top: 30rpx;
}


.list-image {
  margin-left: 5px;
  width: 24px;
  height: 24px;
}


.list-view-count {
  width: 10%;
}


.list-view-image {
  width: 10%;
}


.list-view-text {
  width: 80%;
}


.list-view-friend {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid lightgray;
}


.list-friend-image {
  width: 45px;
  height: 45px;
  margin: 3px;
  margin-left: 10px;
  border-radius: 50%;
}


.list-friend-text {
  font-size: 16px;
  margin-left: 5px;
}


.list-view-friend:hover {
  border-left: 3px solid lightgreen;
  border-right: 3px solid lightcoral;
}