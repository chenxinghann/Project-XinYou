.all {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
.home{
  width: 100%;
  height: 70rpx;
  position: relative;
  top: -100rpx;
}
.home image{
  height: 60rpx;
  width: 70rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
  border: 1px solid #E3B1BA;
  background-color: whitesmoke;
}
.goto{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 85%;
  right: 20rpx;
  z-index: 9999;
}
.goto image{
  width: 100%;
  height: 100%;
}

.circle{
  border: 1px solid black;
  border-radius: 5rpx;
  width:700rpx;
  margin-bottom: 10rpx;
  position: relative;
  top: -80rpx;
}

 .head{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
}

.uimg{
  width: 120rpx;
  height: 120rpx;
  /* border:1rpx pink solid; */
  border-radius: 60rpx;
  overflow: hidden;
  float: left;
  margin-left: 30rpx;
}
.head view{
  width: 50%;
  float: left;
  height: 70%;
  padding-top: 15rpx;
  margin-left: 10rpx;
  /* border:1rpx blue solid; */
}
.content{
  width: 95%;
  
  border:3rpx gray solid;
  border-radius: 20rpx;
  margin:20rpx;
  margin-top:50rpx;
}
.circletxt{
  width: 100%;
  margin-left: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.circleimg image{
  margin-left: 15rpx;
  border-radius: 10rpx;
}
.bottom{
  width: 95%;
  height: 100rpx;
  margin-left: 9rpx;
  border:1rpx rgb(163, 153, 153) solid;
  border-radius: 20rpx;
}
.time{
  width: 300rpx;
  height: 50rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
  font-weight: 200;
}
li{
    list-style:none; 
    float:left;
    margin-bottom:5rpx;
}
.pinglun{
  width: 120rpx;
  position: relative;
  left: 80%;
  height: 50rpx;
  margin-bottom: 10rpx;
  margin-top: -50rpx;
}
.pinglun image{
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.pinglun span{
  float: left;
}
