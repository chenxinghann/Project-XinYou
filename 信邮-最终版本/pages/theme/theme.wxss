.content{
  width: 600rpx;
  height: 700rpx;
  margin-top: -100rpx;
  border-radius: 80rpx 80rpx 0 0;
  overflow: hidden;
}
.text{
  position: absolute;
  top: 130rpx;
  left: 100rpx;
  width: 550rpx;
  height: 650rpx;
  z-index: 9999;
  max-lines: -1;
  
}
.content image{
  width: 100%;
  height: 100%;
  opacity: 0.7;
  z-index: 8888;
}
.corner{
  border: 30px solid transparent;
  border-radius: 0 15rpx 15rpx 0;
  width: 0rpx;
  height: 0rpx;
  position: absolute;
  top: 665rpx;
  right: 95rpx;
  transform: rotate(45deg);
}
.cover{
  border: 30px solid transparent;
  border-right-color: white;
  border-bottom-color: white;
  position: absolute;
  right: 70rpx;
  top: 720rpx;
  width: 0rpx;
  height: 0rpx;
}
