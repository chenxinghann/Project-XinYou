/* pages/publish/publish.wxss */
.publish{
  width: 100%;
  position: absolute;
  top: 0;
}
.head{
  width: 100%;
  height: 100rpx;
  margin-top: 10rpx;
}
.head image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  float: left;
  margin-left: 70rpx;
}
.name{
  width: 50%;
  float: left;
  height: 70%;
  padding-top: 25rpx;
  margin-left: 10rpx;
}
.goto{
  background-color: #E3B1BA;
  width: 100rpx;
  height: 55rpx;
  border-radius: 20rpx;
  position: absolute;
  right: 25rpx;
  top: 30rpx;
  text-align: center;
  padding-top: 10rpx;
}
.content{
  width: 100%;
}
.centerp{
  width: 85%;
  height: 900rpx;
  box-shadow: 0px 0px 6px #4e4e4e;
  border: 1px solid transparent;
  margin-left: 7%;
  margin-top: 30rpx;
}
.content textarea{
  background-color: whitesmoke;
  width: 90%;
  height: 320rpx;
  margin-top: 30rpx;
  margin-left: 5%;
}
.publishimg{
  width: 100rpx;
  height: 100rpx;
  background-color: whitesmoke;
  border: 1px solid #E5BEC5;
  border-radius: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  text-align: center;
}
.publishimg image{
  width: 50%;
  height: 50%;
  margin-top: 5rpx;
}
.publishimg view{
  width: 100%;
  margin-top: -10rpx;
}
.myimg{
  border: 1px solid #E5BEC5;
  width: 90%;
  height: 500rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.myimg image{
  max-width: 100%;  
  max-height: 100%;     
}
.btn{
  color: #fff;
  background-color: #E3B1BA;
  margin-top: 30rpx;
}