/* pages/myTree/myTree.wxss */
.container{
  width:100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.treebac{
  width: 100%;
  height: 1230rpx; 
}

.container1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 88%;
  height: 1000rpx;
  /* border-radius: 60rpx; */
  background-color: #fff;
  opacity: 0.80;
  margin: auto;
  position: absolute;
  top: 110rpx;
}
html, body {
  width: 100%;
  height: 100%;
  margin: 0; 
  padding: 0;
}
.msg image{
  height: 130rpx;
  width: 130rpx;
  border-radius: 100%;
}
.msg{
  height: 90%;
  width: 80%;
  position: relative;
  top: 4%;
  /* border: 10rpx dashed #fff; */
}
.user{
  width: 80%;
  margin: auto;
  margin-top: 5%;
}
/* 头像 */
.user image{
  width: 100rpx;
  height: 100rpx; 
}
.id{
  color: #757575;
  font-weight: 400;
  font-size: small;
  position: relative;
  top: -45rpx;
  left: 20rpx;
}
.article{
  width: 90%;
  margin: auto;
  height: 70%;
  border: 1px solid #BBBBBB;
}
.title{
  font-weight: 600;
  font-size: 1.5rem;
  width: 100%;
  position: relative;
  top: 10rpx;
  bottom: 30rpx;
}
.content{
  font-size: 1.2rem;
  width: 90%;
  position: absolute;
  text-overflow:ellipsis;
  word-wrap:break-word;
  /* white-space: pre-line; */
  /* border: 1px solid black; */
}
.logo{
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 1px solid #BBBBBB;
  height: 70rpx;
  width: 480rpx;
}
.logo image{
  width: 55rpx;
  height: 55rpx;
}
.logo text{
  float: left;
  position: relative;
  left: 35%;
  color: #BBBBBB;
}
.comment{
  float: left;
  position: relative;
  left: 20%;
  top: 5%;
}
.fly{
  float: left;
  position: relative;
  left: 55%;
  top: 5%;
}
.write image{
  width: 70rpx;
  height: 70rpx;
}
.write{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  
}